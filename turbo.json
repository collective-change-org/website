{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"cache": true,
			"env": [
				"PAYLOAD_SECRET",
				"DATABASE_URI",
				"CMS_URL",
				"PAYLOAD_EMAIL",
				"PAYLOAD_PASSWORD"
			],
			"outputs": [
				"dist/**",
				".next/**",
				"!.next/cache/**"
			]
		},
		"check-types": {
			"dependsOn": [
				"^check-types"
			]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"preview": {
			"dependsOn": [
				"build"
			],
			"persistent": true,
			"cache": false
		}
	}
}