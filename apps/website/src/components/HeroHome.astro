<style>
	div {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		color: white;

		p {
			@apply typestyle-hero-p;
		}

		> div.pills {
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: center;
			gap: 2rem;

			@media (max-width: 1205px) {
				flex-direction: column;
				gap: 1rem;

				span {
					&:nth-child(odd) {
						align-self: start;
					}
				}
			}

			span {
				@apply typestyle-hero-p;
				border-radius: 99px;
				border: 1px dashed white;
				padding: var(--spacing-sm) var(--spacing-md);

				&.strukturen {
					--color: #9bf6e3;
					color: var(--color);
					border-color: var(--color);
					margin-top: -75px;
				}
				&.antikapitalistisch {
					--color: #f7a08c;
					color: var(--color);
					border-color: var(--color);
				}
				&.loehne {
					--color: #f5cded;
					color: var(--color);
					border-color: var(--color);
					margin-top: -75px;
				}

				@media (max-width: 1205px) {
					&.studierende {
						margin-left: 6rem;
					}

					&.strukturen {
						margin-top: 0;
					}
					&.antikapitalistisch {
						margin-left: 3rem;
					}
					&.loehne {
						margin-top: 0;
					}
				}
			}
		}

		svg.recipe {
			margin-left: 80px;

			&.mobile {
				display: none;
			}

			@media (max-width: 1205px) {
				&.mobile {
					display: block;
				}
				&.desktop {
					display: none;
				}
			}
		}
		svg.result {
			margin-left: 60px;

			&.mobile {
				display: none;
			}

			@media (max-width: 1205px) {
				&.mobile {
					display: block;
				}
				&.desktop {
					display: none;
				}
			}
		}
	}
</style>
