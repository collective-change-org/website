---
import Default from "@astrojs/starlight/components/Header.astro"
import { getCollection } from "astro:content"
import User from "../User.astro"
import Logo from "../../assets/Logo.svg"
import { cn } from "@website/src/lib/cn"
import { Icon } from "astro-icon/components"

const navlinks = await getCollection("header").then((collection) => {
	return collection.map((item) => {
		return item.data
	})
})

const isDoc = Astro.locals.starlightRoute.entry.data.template === "doc"
---

<header
	class={cn(
		"fixed z-10 flex w-full h-20 flex-row items-center justify-between px-4 py-3",
		isDoc ? "bg-beige-100" : "mix-blend-difference",
	)}
>
	<a href="/"
		><Logo
			class="text-white mix-blend-difference"
			height={64}
			width={190}
		/></a
	>
	<div class="hidden pb-6 mix-blend-difference items-center md:inline-flex">
		{
			navlinks.map((link) => (
				<a
					class="px-6 typestyle-text-l font-bold text-white no-underline"
					href={`/${link.href}`}
					target={link.newTab ? "_blank" : ""}
					rel={link.newTab ? "noopener noreferrer" : ""}>
					{link.label}
				</a>
			))
		}
		<!-- <slot /> -->

		<User server:defer />
	</div>
	<div class="flex flex-col md:hidden bg-green-dark border-2 border-white/10">
		{
			isDoc ? (
				<div class="w-8" />
			) : (
				<button
					popovertarget="mobile-menu"
					class="w-16 h-16 cursor-pointer flex items-center justify-center">
					<Icon name="ph:list" size={32} />
				</button>
			)
		}
		<div
			popover
			id="mobile-menu"
			class="items-start gap-0 border-2 border-white/10 pb-2 w-max"
		>
			<button
				class="bg-transparent flex -mb-4  w-full justify-end p-3 cursor-pointer"
				popovertarget="mobile-menu"
				popovertargetaction="hide"
			>
				<Icon name="ph:x" size={32} />
			</button>
			{
				isDoc
					? null
					: navlinks.map((link) => (
							<a
								class="flex items-center gap-4 px-4 h-16 typestyle-text-l font-bold text-white no-underline"
								href={`/${link.href}`}
								target={link.newTab ? "_blank" : ""}
								rel={link.newTab ? "noopener noreferrer" : ""}>
								{link.label}
							</a>
						))
			}
			<User server:defer />
		</div>
	</div>
</header>

<style scoped>
	:popover-open {
		position: fixed;
		top: 0.4rem;
		left: 0;
		margin-left: calc(100% - 16px);
		translate: -100%;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	::backdrop {
		background: rgba(0, 0, 0, 0.5);
		backdrop-filter: blur(3px);
	}
</style>
